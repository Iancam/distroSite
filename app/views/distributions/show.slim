  .panel-body
    table.table.table-striped
      thead
        tr 
          td Contact
          td School id
          td subject
          td order_id
          td toolbox
          td enrollment
      tbody
        - @distribution.orders.each do |order|
          - if order.i_ready_orders.length > 0
            tr
              td
                = order.contact_name
              td
                = order.school_id
              - order.i_ready_orders.each do |i|
                td
                  =i.subject
                td
                  =i.order_id
                td
                  =i.toolbox
                td
                  =i.enrollment
